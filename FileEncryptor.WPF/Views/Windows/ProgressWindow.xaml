<Window x:Class="FileEncryptor.WPF.Views.Windows.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:FileEncryptor.WPF.Views.Windows"
        Title="Прогресс" 
        Height="160" Width="435">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Статус" Margin="5,20"/>

        <Grid Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ProgressBar Grid.Column="0" VerticalAlignment="Center" Height="20" IsIndeterminate="True"/>
            <TextBlock Grid.Column="1" Text="100.0%" Margin="10,0" VerticalAlignment="Center" TextAlignment="Right" MinWidth="40"/>
            <Button Grid.Column="2" Content="Cancel" Padding="30,10" Background="WhiteSmoke"/>
        </Grid>
    </Grid>
</Window>
